{
  "git": {
    "commitMessage": "chore: release v${version}"
  }, 
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["npm run lint"],
    "after:bump": ["npm run build", "npm run test"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md"
    }
  }
}
